{   
    "logger": {
        "logdir": "./logs"
    },
    "exp": {
        "seed": 1,
        "model": "lstm",
        "type": "active-holdout",
        "target": "arousal",
        "pos_label": "high",
        "savedir": "~/projects/AdaptiveESM/results",
        "tune": false,
        "active_learning": {
            "init_ratio": 0.05,
            "update_ratio": 0.01,
            "decision_boundary": 0.5,
            "confidence_threshold": 0.2,
            "update_lr": 0.0008,
            "update_epochs": 100
        }
    },
    "data": {
        "data_dir": "~/data/kemocon/segments",
        "batch_size": 2000,
        "label_type": "self",
        "n_classes": 2,
        "val_size": 0.1,
        "num_segs": 12,
        "resample": true,
        "extract_features": false,
        "standardize": true,
        "fusion": "stack"
    },
    "early_stop": {
        "monitor": "valid_loss",
        "min_delta": 0.0,
        "patience": 500,
        "verbose": true,
        "mode": "min"
    },
    "trainer": {
        "gpus": [1],
        "auto_select_gpus": false,
        "precision": 16,
        "deterministic": true,
        "max_epochs": 1000,
        "gradient_clip_val": 0.2
    },
    "hparams": {
        "inp_size": 4,
        "out_size": 1,
        "hidden_size": 20,
        "n_layers": 2,
        "p_drop": 0.2,
        "bidirectional": true,
        "learning_rate": 0.0008,
        "scheduler": null
    }
}
