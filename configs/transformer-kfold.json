{
    "logger": {
        "type": "tensorboard",
        "logdir": "./logs"
    },
    "exp": {
        "seed": 1,
        "model": "transformer",
        "type": "kfold",
        "target": "arousal",
        "pos_label": "high",
        "savedir": "~/projects/AdaptiveESM/results",
        "tune": false
    },
    "data": {
        "data_dir": "~/data/kemocon/segments",
        "batch_size": 2000,
        "label_type": "self",
        "n_classes": 2,
        "val_size": 0.2,
        "resample": true,
        "standardize": true,
        "fusion": "stack"
    },
    "early_stop": {
        "metric": "valid_loss",
        "min_delta": 0.0,
        "patience": 100,
        "verbose": true,
        "mode": "min"
    },
    "trainer": {
        "gpus": 1,
        "auto_select_gpus": true,
        "precision": 16,
        "deterministic": true,
        "max_epochs": 10000,
        "gradient_clip_val": 0.2,
        "auto_lr_find": false
    },
    "hparams": {
        "d_model": 4,
        "max_len": 20,
        "nhead": 4,
        "dim_feedforward": 64,
        "dropout": 0.2,
        "num_layers": 6,
        "out_size": 1,
        "batch_first": true,
        "learning_rate": 3e-5
    }
}