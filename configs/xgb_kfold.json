{   
    "logger": {
        "type": "tensorboard",
        "api_key": null,
        "workspace": "cheulyop",
        "logdir": "./logs",
        "project_name": "adaptiveesm"
    },
    "exp": {
        "seed": 1,
        "model": "xgboost",
        "type": "kfold",
        "target": "valence",
        "pos_label": "high",
        "savedir": "~/projects/AdaptiveESM/results",
        "tune": false
    },
    "data": {
        "data_dir": "~/data/kemocon/segments",
        "batch_size": 2000,
        "label_type": "self",
        "n_classes": 2,
        "val_size": 0.2,
        "num_segs": 5,
        "resample": false,
        "extract_features": true,
        "standardize": true,
        "fusion": "stack"
    },
    "early_stop": {
        "monitor": "valid_loss",
        "min_delta": 0.0,
        "patience": 100,
        "verbose": true,
        "mode": "min"
    },
    "trainer": {
        "gpus": 1,
        "auto_select_gpus": true,
        "precision": 16,
        "deterministic": true,
        "max_epochs": 1000,
        "gradient_clip_val": 0.2
    },
    "hparams": {
        "bst": {
            "booster": "gbtree",
            "verbosity": 1,
            "learning_rate": 0.3,
            "min_split_loss": 0,
            "max_depth": 6,
            "objective": "binary:logistic",
            "eval_metric": "auc",
            "seed": 1
        },
        "num_rounds": 100,
        "threshold": 0.5
    }
}